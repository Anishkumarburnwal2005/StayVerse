<% layout("/Layout/boilerplate.ejs")%>

<style>
  @media (max-width: 500px) and (orientation: portrait) {
    body {
      width: 22.3rem;
    }

    .newPage {
      margin: 0 1rem 0 1rem !important;
      width: 19rem !important;
      padding: 0;
    }
  }

  @media (max-width: 800px) and (orientation: landscape) {
    body {
      width: 46rem;
    }

    .newPage {
      margin: 0 1rem 2rem 1rem !important;
      width: 30rem !important;
      padding: 0;
    }
  }

  .limit {
    font-size: 16px;
    font-weight: 500;
  }

  .title,
  .description,
  .image,
  .location,
  .country,
  .category,
  .price {
    font-weight: 550 !important;
  }
</style>

<body>
  <div class="row container">
    <div class="col-7 offset-2 mb-3 newPage">
      <h2 class="mt-3 mb-4 fs-3"><u>Create New Listing</u></h2>
      <form
        method="POST"
        action="/listings/post"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-2">
          <label for="title" class="form-label title">Title:</label>
          <input
            type="text"
            id="title"
            name="listing[title]"
            placeholder="Enter your title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good!!</div>
          <div class="invalid-feedback">Enter a suitable Title.</div>
        </div>

        <div class="mb-2">
          <label for="description" class="form-label description"
            >Describe your place:</label
          >
          <textarea
            id="description"
            name="listing[description]"
            placeholder="Enter your description"
            rows="3"
            ,
            cols="30"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a short description!!</div>
        </div>

        <div class="mb-2">
          <label for="image" class="form-label image">Upload image:</label>
          <input
            type="file"
            id="image"
            name="listing[image]"
            placeholder="Enter your Image/url"
            class="form-control"
            multiple
            required
          />
          <p class="limit">Only 5 images can be uploaded for a listing!</p>
          <div class="invalid-feedback">Please upload a valid image!!</div>
        </div>

        <div class="mb-2">
          <label for="category" class="form-label category">Category:</label>
          <select
            id="category"
            name="listing[category]"
            class="form-select"
            required
          >
            <option>Trending</option>
            <option>Beach</option>
            <option>Cabins</option>
            <option>Desert Stays</option>
            <option>Farms</option>
            <option>Forest Retreats</option>
            <option>Hotels</option>
            <option>Iconic cities</option>
            <option>igloo</option>
            <option>Island</option>
            <option>Jungle Lodges</option>
            <option>Lakefront</option>
            <option>Mountain</option>
            <option>Snow</option>
          </select>
          <div class="invalid-feedback">Location should be valid</div>
        </div>

        <div class="mb-2">
          <label for="location" class="form-label location">Location:</label>
          <input
            type="text"
            id="location"
            name="listing[location]"
            placeholder="Enter your location"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location should be valid</div>
        </div>

        <div class="row mb-4">
          <div class="col-md-4">
            <label for="price" class="form-label price">Price:</label>
            <input
              id="price"
              name="listing[price]"
              placeholder="Enter your price"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>
          &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
          <div class="col-md-6">
            <label for="country" class="form-label country">Country:</label>
            <input
              type="text"
              id="country"
              name="listing[country]"
              placeholder="Enter your country"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country should be valid</div>
          </div>
        </div>
        <button class="btn btn-outline-primary" class="mb-3 mt-3">
          Create
        </button>
      </form>
    </div>
  </div>
</body>
