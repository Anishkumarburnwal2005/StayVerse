<div class="searchI">
  <form
    class="d-flex"
    role="search"
    style="width: 40%"
    action="/listings/search"
  >
    <input
      class="form-control me-2 searchInput searchMob"
      type="search"
      placeholder="Search destinations"
      name="search"
    />
    <button class="btn searchBtn" type="submit">
      <i class="fa-solid fa-magnifying-glass"></i>Search
    </button>
  </form>
</div>

<style>
  .Trending,
  .Hotels,
  .IconiCities,
  .Mountain,
  .Island,
  .igloo,
  .Cabins,
  .Lakefront,
  .Beach,
  .Farms,
  .Snow,
  .ForestRetreats,
  .JungleLodges,
  .DesertStays {
    font-family: "Roboto Condensed", sans-serif !important;
    font-weight: 500;
    font-size: 16px !important;
  }
</style>

<div id="filters-container">
  <div id="filters">
