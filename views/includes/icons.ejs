  /* Search bar */

  .search-bar {
    width: 49rem;
    background: #fff;
  }

  .search-bar input:focus {
    box-shadow: none;
  }

  .divider {
    width: 1px;
    height: 40px;
    background-color: #ddd;
  }

  .search-container {
    display: flex;
    justify-content: center;
  }

  /* Heading */

  .heading {
    text-align: center;
  }
</style>

<div class="heading mt-4">
  <h1>Find your next stay</h1>
  <p>Search deals on hotels, homes, and much more...</p>
</div>

<div class="container mt-4 search-container mb-3">
  <form action="/listings/search">
    <div class="search-bar d-flex align-items-center shadow rounded-pill p-2">
      <div class="px-3 flex-fill">
        <small class="text-muted">Where</small>
        <input
          type="text"
          class="form-control border-0 p-0"
          placeholder="Search destinations"
          name="search"
          autocomplete="off"
        />
      </div>

      <div class="divider"></div>

      <div class="px-3">
        <small class="text-muted">Check in</small>
        <input
          type="date"
          class="form-control border-0 p-0"
          placeholder="Add dates"
          name="checkIn"
        />
      </div>

      <div class="divider"></div>

      <div class="px-3">
        <small class="text-muted">Check out</small>
        <input
          type="date"
          class="form-control border-0 p-0"
          placeholder="Add dates"
          name="checkOut"
        />
      </div>

      <div class="divider"></div>

      <div class="px-3">
        <small class="text-muted">Guests</small>
        <input
          type="text"
          class="form-control border-0 p-0"
          placeholder="Add guests"
          name="guestNo"
          autocomplete="off"
        />
      </div>

      <button class="btn btn-danger rounded-circle ms-2">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </div>
  </form>
</div>

