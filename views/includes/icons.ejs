<style>
  .Trending,
  .Hotels,
  .IconiCities,
  .Mountain,
  .Island,
  .igloo,
  .Cabins,
  .Lakefront,
  .Beach,
  .Farms,
  .Snow,
  .ForestRetreats,
  .JungleLodges,
  .DesertStays {
    font-family: "Roboto Condensed", sans-serif !important;
    font-weight: 500;
    font-size: 19px !important;
  }

  #filters-container {
    overflow: hidden;
    width: 45rem;
  }

  #filters {
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    overflow-x: auto;
    scroll-behavior: smooth;
    white-space: nowrap;
    gap: 1.8rem;
    width: 1000px; /* ✅ Fix width */
  }

  /* ✅ Hide scrollbar */
  #filters::-webkit-scrollbar {
    display: none;
  }

  .filters {
    width: 150px;
    text-align: center;
    margin-right: 2rem;
    margin-top: 1rem;
    opacity: 0.3;
  }
  .filters:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filters p {
    font-size: 0.8rem;
  }

