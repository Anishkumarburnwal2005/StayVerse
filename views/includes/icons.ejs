      <i class="fa-solid fa-angles-left"></i>
    </div>

    <div class="filters">
      <div><i class="fa-sharp fa-regular fa-folder-open"></i></div>
      <p>Empty</p>
    </div>

    <div class="filters">
      <%category="Trending"%>
      <a href="/listings/page/<%=category%>" class="iconColor">
        <div><i class="fa-solid fa-fire"></i></div>
        <p class="Trending">Trending</p>
      </a>
    </div>

    <div class="filters">
      <%category="Hotels"%>
