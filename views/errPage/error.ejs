<% layout("/Layout/boilerplate.ejs")%>

<style>
  .container {
    margin: 0;
  }

  .navbar {
    display: none;
  }

  .img {
    height: 43rem;
    width: 100rem;
  }

  footer {
    display: none;
  }

  @media (max-width: 500px) and (orientation: portrait) {
    .img2 {
      display: none;
    }
    .img {
      display: cover;
      width: 22rem;
      height: 28rem;
    }
    .container {
      height: 30rem !important;
    }

    .error {
      margin-left: 0.8rem;
    }
  }

  @media (max-width: 800px) and (orientation: landscape) {
    .img {
      display: none;
    }
    .img2 {
      display: cover;
      width: 35rem;
      height: 28rem;
      margin-left: 1rem;
    }
    .container {
      height: 30rem !important;
    }
    .error {
      justify-content: center;
    }
  }

  .alert-danger {
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>

<%if(message && message=="Page not found!!"){%>
<img
  class="img"
  src="https://media1.tenor.com/m/U5hmONvZGo8AAAAd/mmt-error-error.gif"
  alt="errorImg"
/>

<%}else{%>
<div class="row error">
  <div class="alert alert-danger col-6 offset-3" role="alert">
    <h4 class="alert-heading"><%=message%></h4>
  </div>
</div>
<%}%>
